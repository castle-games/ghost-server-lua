#!/bin/sh

exec '/usr/local/openresty/luajit/bin/lua' -e 'package.path="/root/.luarocks/share/lua/5.1/?.lua;/root/.luarocks/share/lua/5.1/?/init.lua;/usr/local/share/lua/5.1/?.lua;/usr/local/share/lua/5.1/?/init.lua;"..package.path; package.cpath="/root/.luarocks/lib/lua/5.1/?.so;/usr/local/lib/lua/5.1/?.so;"..package.cpath' -e 'local k,l,_=pcall(require,"luarocks.loader") _=k and l.add_context("lapis","1.7.0-1")' '/ghost-server/lua_modules/lib/luarocks/rocks/lapis/1.7.0-1/bin/lapis' "$@"
